<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:id="@+id/top" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/bg_title" android:paddingTop="5dip">

		<Button android:id="@+id/btnSet" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/btnSet"
			android:layout_weight="0.25">
		</Button>
		<Button android:id="@+id/btnLoop" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/btnLoop"
			android:layout_weight="0.25">
		</Button>
		<Button android:id="@+id/btnSetAndFav" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/btnSetAndFav"
			android:layout_weight="0.25">
		</Button>
		
		<Button android:id="@+id/btnStop" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/btnStop"
			android:layout_weight="0.25">
		</Button>
	</LinearLayout>

	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight="1.0">
		<com.baidu.mapapi.MapView
			android:id="@+id/mapView" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1"
			android:clickable="true" />
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_centerInParent="true"
			android:src="@drawable/center" />
	</RelativeLayout>

</LinearLayout>
